<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.u5733884.calculator.MainActivity">

    <TextView
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:id = "@+id/textView"/>


    <Button
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonEight"
        android:layout_alignBaseline="@+id/buttonSeven"
        android:layout_alignBottom="@+id/buttonSeven"
        android:layout_toRightOf="@+id/buttonSeven"
        android:layout_toEndOf="@+id/buttonSeven" />

    <Button
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonEight"
        android:layout_toRightOf="@+id/buttonEight"
        android:layout_toEndOf="@+id/buttonEight"
        android:id="@+id/buttonNine" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonNine"
        android:layout_toRightOf="@+id/buttonNine"
        android:layout_toEndOf="@+id/buttonNine"
        android:id="@+id/buttonAdd" />

    <Button
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="83dp"
        android:id="@+id/buttonSeven"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonEight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:id="@+id/buttonFour" />

    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonFour"
        android:layout_toRightOf="@+id/buttonFour"
        android:layout_toEndOf="@+id/buttonFour"
        android:id="@+id/buttonFive" />

    <Button
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonFive"
        android:layout_toRightOf="@+id/buttonFive"
        android:layout_toEndOf="@+id/buttonFive"
        android:id="@+id/buttonSix" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonSix"
        android:layout_toRightOf="@+id/buttonSix"
        android:layout_toEndOf="@+id/buttonSix"
        android:id="@+id/buttonSubstract" />

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonFour"
        android:layout_toLeftOf="@+id/buttonFive"
        android:layout_toStartOf="@+id/buttonFive"
        android:layout_marginTop="29dp"
        android:id="@+id/buttonOne" />

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonOne"
        android:layout_toRightOf="@+id/buttonOne"
        android:layout_toEndOf="@+id/buttonOne"
        android:id="@+id/buttonTwo" />

    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonTwo"
        android:layout_toRightOf="@+id/buttonTwo"
        android:layout_toEndOf="@+id/buttonTwo"
        android:id="@+id/buttonThree" />

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonThree"
        android:layout_toRightOf="@+id/buttonThree"
        android:layout_toEndOf="@+id/buttonThree"
        android:id="@+id/buttonMultiply" />

    <Button
        android:text="Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonOne"
        android:layout_toLeftOf="@+id/buttonTwo"
        android:layout_toStartOf="@+id/buttonTwo"
        android:layout_marginTop="26dp"
        android:id="@+id/buttonClear" />

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonClear"
        android:layout_toRightOf="@+id/buttonClear"
        android:layout_toEndOf="@+id/buttonClear"
        android:id="@+id/buttonZero" />

    <Button
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonZero"
        android:layout_toRightOf="@+id/buttonZero"
        android:layout_toEndOf="@+id/buttonZero"
        android:id="@+id/buttonEqual" />

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonEqual"
        android:layout_toRightOf="@+id/buttonEqual"
        android:layout_toEndOf="@+id/buttonEqual"
        android:id="@+id/buttonDivide" />
</RelativeLayout>
